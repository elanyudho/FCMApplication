<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FCMApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_lochmara</item>
        <item name="colorPrimaryVariant">@color/blue_lochmara</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/yellow_selective</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="clearScreen.blueLoch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/blue_lochmara</item>
    </style>

    <style name="clearScreen.blueDim" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/blue_dim</item>
    </style>

    <style name="SearchViewText" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedButton">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView10">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.BUMNCerdas.DotIndicatorTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
</resources>