<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FCMApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_lochmara</item>
        <item name="colorPrimaryVariant">@color/blue_lochmara</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/yellow_selective</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SearchViewText" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedButton">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView10">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Theme.BUMNCerdas.DotIndicatorTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
</resources>